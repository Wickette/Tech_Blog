<div style="width: 100%;" class="p-5 text-center bg-light">
  <h1 class="mb-3">Tech Blog</h1>
  <h4 class="mb-3">Share the knowledge!</h4>
</div>

{{#each threads as |thread|}}
<div class="card text-center" style="margin: 20px;">
  <div class="card-header"><h5 class="card-title">{{thread.title}}</h5></div>
  <div class="card-body">
    {{!-- <p class="card-text">
      {{thread.description}}
    </p> --}}
    <a type="button" class="btn mb-2 mb-md-0 btn-outline-primary btn-block" href="/thread/{{thread.id}}">Go to thread</a>
  </div>
  <div class="card-footer text-muted">Posted on: {{format_date thread.date_created}} By: {{thread.user.username}}</div>
</div>
{{/each}}