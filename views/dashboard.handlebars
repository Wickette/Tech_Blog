<div style="display: flex; justify-content:center;">
<a href="/newThread" type="button" class="btn mb-2 mb-md-0 btn-outline-primary btn-block">Add a new Thread</a>
</div>

{{#each threads as |thread|}}
<div class="card text-center" style="margin: 20px;">
  <div class="card-header">
  <h5 class="card-title"><a class="link" href="/dashboard/edit/{{thread.id}}">{{thread.title}}</a></h5>
  </div>
  <div class="card-body">
    <p class="card-text">
      {{thread.description}}
    </p>
    <a type="button" class="btn mb-2 mb-md-0 btn-outline-primary btn-block" href="/thread/{{thread.id}}">Go to thread</a>
  </div>
  <div class="card-footer text-muted">{{format_date thread.date_created}}</div>
</div>
{{/each}}

