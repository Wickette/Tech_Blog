<div class="card text-center" style="margin: 20px;">
  <div class="card-header"></div>
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-text">
      {{description}}
    </p>
    <div class="card-footer text-muted">Posted by: {{user.username}} on {{format_date date_created}}</div>
    {{#if logged_in}}
    <div>
        <p>Add a comment</p>
        <input id="commentInput" class="input" placeholder="Comment">
        <button id="commentBtn" class="btn btn-primary">Submit</button>
    </div>
    {{/if}}
  </div>
</div>
{{#each comments as |comment|}}
<div style="display: none;">
    <p>Name: {{comment.user.username}}</p>
    <p>Date: {{format_date date_created}}</p>
    <p>Comment: {{comment.description}}</p>
</div>
{{/each}}
<script src="/js/add-comment.js"></script>